<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginBottom="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você está prestes a desligar o sistema EcoWatt, ao desligá-lo a sua residência passará a usar 100% da rede elétrica tradicional gerando custos em sua conta. Além disso, análises de dados e todos os acessos remotos as tomadas inteligentes e ao ecossistema EcoWatt estarão desligados."
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Vamos direcionar como prioridade da devolução da energia sobressalente a rede da concessionária e vamos priorizar o consumo da energia armazenada."
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:backgroundTint="#C6C6C6"
                android:text="CANCELAR"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#E35286"
                android:text="ATIVAR O MODO FÉRIAS"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
